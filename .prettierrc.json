{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": [".prettierrc", ".releaserc", ".eslintrc", ".commitlintrc"],
      "options": { "parser": "json" }
    }
  ]
}
